{
  "manifest_version": 2,
  "name": "웨않되 - 맞춤법 검사기",
  "version": "1.0.0",
  "description": "웨일 브라우저용 한글 맞춤법 검사기 (feat. NAVER 맞춤법 검사기)",
  "icons": {
    "16": "image/dummy_128.png",
    "32": "image/dummy_128.png",
    "48": "image/dummy_128.png",
    "128": "image/dummy_128.png"
  },

  "sidebar_action": {
    "default_page": "sidebar.html",
    "default_icon": {
      "16": "image/dummy_128.png"
    },

    "default_title": "웨않되",
    "use_navigation_bar": false,
    "mobile_user_agent": true
  },

  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["css/content-script.css"],
      "js": ["js/content-script.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [

  ]
}